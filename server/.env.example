# ================================
# Server Configuration
# ================================
NODE_ENV=development
PORT=5000

# ================================
# Database
# ================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/career-navigator

# Production (MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/career-navigator?retryWrites=true&w=majority

# ================================
# Authentication
# ================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# ================================
# AI Service
# ================================
# Gemini API
VITE_GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API (alternative)
# OPENAI_API_KEY=your-openai-api-key-here

# ================================
# Frontend URL (for CORS)
# ================================
FRONTEND_URL=http://localhost:8081

# Production
# FRONTEND_URL=https://career-navigator.vercel.app

# ================================
# File Upload
# ================================
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads/resumes

# ================================
# Security
# ================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# Email (Optional - for password reset)
# ================================
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
